#sidebar
  #header
    .user
      .user__name
        = current_user.name
        .font-awesome__user
          %ul.font-awesome__user--list
            %li.font-awesome--create-group.font-color
              =link_to new_group_path do
                =fa_icon 'edit', class: 'icon'
            %li.font-awesome--edit-user.font-color
              =link_to edit_user_path(current_user) do
                =fa_icon 'cog', class: 'icon'

  #navbar
    .group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group--last-message
            Good by world!

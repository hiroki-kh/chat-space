#footer
  =form_for [@group, @message] do |f|
    .message-area
      =f.text_field :content, class: "comment-form", placeholder: "type a message"
      .image-form
        = f.label :image, class: "upload-label" do
          %i.fa.fa-picture-o
          = f.file_field :image, id: "upload-icon", style: "display:none;"


    .send-button
      = f.submit "Send", class: "form__submit"

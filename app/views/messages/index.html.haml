%html
  %head
    %meta{content: 'text/html', charset: 'UTF-8', 'http-equiv': 'Content-Type'}/
    %title ChatSpace

  %body
    #group-header
      .group-left
        .group-name
          sampleグループ
        .group-members
          Members: seo neko

      .edit-button
        .button-name
          =link_to "Edit"

    #chat
      .chat__comment1
        .member
          seo
        .chat__time
          2016/09/21 06:16:55
        .comment
          Hello world!

      .chat__comment2
        .member
          neko
        .chat__time
          2016/09/22 06:16:55
        .comment
          Good by world!

    #footer
      .message-area
        =form_tag('/') do
          =text_field_tag 'message', '', {class: "comment-form", placeholder: "type a message"}
          .image-form
            %label.upload-label{for: "upload-icon"}
              %i.fa.fa-picture-o
              = file_field_tag "image", id: "upload-icon", style: "display:none;"


      .send-button
        =link_to "Send"
